@model Application.Dto.Product.ProductInsert

@{
    ViewData["Title"] = "Edit Product";
    var categories = ViewBag.ProductInsertData.Categories;
    var suppliers = ViewBag.ProductInsertData.Suppliers;
    var makers = ViewBag.ProductInsertData.Makers;
}

<h3>Edit Product</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>  
                <select asp-for="CategoryId" class="form-control" 
                        asp-items="@(new SelectList(categories, "Id", "CategoryName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <select class="form-control" asp-for="SupplierId" 
                        asp-items="@(new SelectList(suppliers, "Id", "SupplierName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="MakerId" class="control-label"></label>
                <select class="form-control" asp-for="MakerId"
                        asp-items="@(new SelectList(makers, "Id", "MakerName"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
