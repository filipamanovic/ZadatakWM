@model Application.Dto.Product.ProductInsert

@{
    ViewData["Title"] = "Create product";
    var categories = ViewBag.ProductInsertData.Categories;
    var suppliers = ViewBag.ProductInsertData.Suppliers;
    var makers = ViewBag.ProductInsertData.Makers;
}

<h3>Create Product</h3>

<hr />
<div class="row">
    <div class="col-md-6">
        <a asp-action="Create" asp-controller="Category" class="btn btn-info">New Category</a>
        <a asp-action="Create" asp-controller="Maker" class="btn btn-info">New Maker</a>
        <a asp-action="Create" asp-controller="Supplier" class="btn btn-info">New Supplier</a>
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control"
                        asp-items="@(new SelectList(categories, "Id", "CategoryName"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="SupplierId"></label>
                <select class="form-control" asp-for="SupplierId"
                        asp-items="@(new SelectList(suppliers, "Id", "SupplierName"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="MakerId"></label>
                <select class="form-control" asp-for="MakerId"
                        asp-items="@(new SelectList(makers, "Id", "MakerName"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
